<%= form_with(model: place, local: true) do |form| %>
  <% if place.errors.any? %>
    <div class="alert alert-danger">
      <h4>Помилки при збереженні:</h4>
      <ul>
        <% place.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Назва місця", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, "Адреса", class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :latitude, "Широта", class: "form-label" %>
      <%= form.text_field :latitude, class: "form-control" %>
    </div>
    <div class="col-md-6 mb-3">
      <%= form.label :longitude, "Довгота", class: "form-label" %>
      <%= form.text_field :longitude, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit "Зберегти місце", class: "btn btn-success" %>
  </div>
<% end %>